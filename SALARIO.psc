// Ejercicio nro 1 - Taller de Programacion II
// Calcular el descuento del X % de un trabajador

Proceso NuevoSueldo
	Definir SALARIO Como Real;
	Escribir "---  Aplicar un descuento del 20% al suelto bruto. ---";
	Escribir "INGRESE SU SALARIO ACTUAL: ";
	LEER SALARIO;
	Escribir "EL DESCUENTO ES:     $ ",(SALARIO *0.2);
	Escribir "EL NUEVO  $ ", SALARIO - SALARIO*0.2;
FinProceso

